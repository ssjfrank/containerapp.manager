# Azure Container Apps Manager - Environment Variables
# Copy this file to .env and update with your actual values

# TIBCO EMS Configuration
EMS_CONNECTION_STRING=tcp://your-ems-server:7222
EMS_USERNAME=your-ems-username
EMS_PASSWORD=your-ems-password
EMS_ADMIN_USERNAME=your-ems-admin-username
EMS_ADMIN_PASSWORD=your-ems-admin-password

# Azure Storage Configuration
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-key;EndpointSuffix=core.windows.net

# Azure Communication Services (Optional - for email notifications)
ACS_CONNECTION_STRING=endpoint=https://your-acs-resource.communication.azure.com/;accesskey=your-acs-key

# Azure Key Vault (Optional - for secure configuration)
KEYVAULT_URI=https://your-keyvault.vault.azure.net/

# Development Environment Variables
DOTNET_ENVIRONMENT=Development
ASPNETCORE_ENVIRONMENT=Development

# Azure Identity (for Managed Identity authentication)
AZURE_CLIENT_ID=your-managed-identity-client-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Container Registry (for CI/CD)
ACR_LOGIN_SERVER=your-registry.azurecr.io

# Debug Environment (when using Docker Compose)
# Use these values when running with docker-compose.debug.yml
